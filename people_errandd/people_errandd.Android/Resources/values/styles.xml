<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->

    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <!--<item name="colorPrimary">#2196F3</item>-->
    <!-- colorPrimaryDark is used for the status bar -->
    <!--<item name="colorPrimaryDark">#1976D2</item>-->
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <!--<item name="colorAccent">#FF4081</item>-->
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:actionMenuTextColor">#5C76B1</item>

    <!-- <item name="android:textColorSecondary">#166BA2</item>  全部底線的顏色-->

    <item name="android:statusBarColor">#5C76B1</item>
    <item name="colorAccent">#5C76B1</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>


  </style>


  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#5C76B1</item>
  </style>
  <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
    <item name="android:headerBackground">#5C76B1</item>
  </style>
  <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
    <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
  </style>

  <style name="TimePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#5C76B1</item>
    <item name="android:textColorPrimary">#555555</item>
    <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
  </style>
  <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
    <item name="colorAccent">#5C76B1</item>
    <item name="android:timePickerMode">spinner</item>

  </style>

  
</resources>